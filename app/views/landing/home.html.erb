<h1>MMIchat</h1>
<h3>Chat de discussion pour la promo MMI</h3>

<div class="chatbox">
    <% Message.all.reverse_each do |m| %>
        <p class="message"><span class="user bold"><%= m.user.email %></span> (<%= m.created_at.to_formatted_s(:short) %>)<br /><%= m.content %></p>
    <% end %>
</div>

<%= form_for @message, url: messages_path(@message) do |f| %>
    <fieldset style="width: 7vw;">
    <legend>Envoyer un message</legend>
        <%= f.text_area :content, placeholder: "Votre message..." %><br />
        <%= f.submit "Envoyer" %>
    </fieldset>
<% end %>